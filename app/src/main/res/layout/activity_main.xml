<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#6DD40055"
        android:gravity="center"
        android:textSize="25dp"
        android:text="大樂透選號" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#32404040"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第一組號碼" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b1_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/b1_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/b1_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/b1_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#6A58D400"
        android:orientation="vertical"
        android:padding="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第二組號碼" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b2_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/b2_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/b2_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/b2_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#54FF5722"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第三組號碼" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b3_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/b3_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/b3_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/b3_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_ball"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFEB3B">

        <Button
            android:id="@+id/pick_nums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="隨機選號"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            android:onClick="lottery"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#222DFF"
            android:layout_above="@id/pick_nums"/>
    </RelativeLayout>

</LinearLayout>